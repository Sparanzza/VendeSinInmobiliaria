<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="9dp"
    android:outlineSpotShadowColor="@color/primary_light"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mainPhotoPostImageView"
            android:src="@drawable/ic_picture"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:tint="@color/primary_light"
            android:scaleType="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="10dp"

            android:layout_marginHorizontal="10dp">
            <TextView
                android:id="@+id/titlePostTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Title post"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/pricePostTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Price"
                android:textStyle="bold"
                android:textSize="16dp"
                android:maxLines="1"
                android:textColor="@color/primary"
                android:textAlignment="viewEnd"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginVertical="0dp"
            android:layout_marginHorizontal="10dp">
            <TextView
                android:id="@+id/categoryPostTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Category post"
                android:textSize="12dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/locationPostTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Location"
                android:textSize="12dp"
                android:textAlignment="viewEnd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:src="@drawable/ic_bed"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:tint="@color/primary_light" />
                <TextView
                    android:id="@+id/bedroomPostTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="888"
                    android:textSize="12dp"
                    android:layout_marginHorizontal="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:src="@drawable/ic_bathroom"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:tint="@color/primary_light" />
                <TextView
                    android:id="@+id/bathroomPostTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="888"
                    android:textSize="12dp"
                    android:layout_marginHorizontal="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:src="@drawable/ic_blueprint"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:tint="@color/primary_light" />
                <TextView
                    android:id="@+id/sqmPostTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="888"
                    android:textSize="12dp"
                    android:layout_marginHorizontal="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:src="@drawable/ic_building"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:tint="@color/primary_light" />
                <TextView
                    android:id="@+id/floorPostTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="888"
                    android:textSize="12dp"
                    android:layout_marginHorizontal="4dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:src="@drawable/ic_clock"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:tint="@color/primary_light" />
                <TextView
                    android:id="@+id/antiquityPostTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="888"
                    android:textSize="12dp"
                    android:layout_marginHorizontal="4dp"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>

