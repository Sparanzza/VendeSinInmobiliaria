<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/my_pager"
                android:layout_width="match_parent"
                android:layout_height="245dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/my_tablayout"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/my_pager"
                app:tabGravity="center"
                app:tabIconTint="@color/primary_muted"
                app:tabIndicatorColor="@color/primary_acent"
                app:tabIndicatorHeight="8dp"
                app:tabMode="scrollable"
                app:tabPadding="2dp"
                app:tabRippleColor="@color/primary_light" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:elevation="9dp"
                android:outlineSpotShadowColor="@color/primary_light"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:outlineSpotShadowColor="@color/primary_light"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_round_person_24"
                        app:cardBackgroundColor="@color/primary_muted"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="9dp">

                        <ImageView
                            android:id="@+id/photoProfileDetailsPostImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_round_person_24" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/usernameDetailsPostTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="User name" />

                        <TextView
                            android:id="@+id/phoneNumberDetialsPostTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phone number" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/goToProfileDetailsPostButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Profile" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/categoryDetailsPostImageView"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_flat"
                        app:tint="@color/primary" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/titleDetailsPostTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:textColor="@color/primary"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/categoryDetailsPostTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="Category" />


                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/priceDetailsPostTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/primary_acent"
                    android:textSize="32dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="15dp"
                    android:alpha=".5"
                    android:background="@color/primary_muted" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:text="DESCRIPTION"
                    android:textAlignment="center"
                    android:textColor="@color/primary_light"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descriptionDetailsPostTextView"
