<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:outlineSpotShadowColor="@color/secondary"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:elevation="90dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:outlineSpotShadowColor="@color/primary_light"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_round_person_24"
                app:cardBackgroundColor="@color/secondary"
                app:cardCornerRadius="32dp"
                app:cardElevation="9dp">

                <ImageView
                    android:id="@+id/photoProfileCardCommentImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_round_person_24" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/secondary"
                    android:id="@+id/usernameCardCommentTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="User name" />

                <TextView
                    android:id="@+id/textCardCommentTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comment ..." />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>