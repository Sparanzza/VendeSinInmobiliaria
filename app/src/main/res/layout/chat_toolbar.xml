<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/backChatImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        app:tint="@color/primary"
        android:src="@drawable/ic_arrow_left_24" />

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/backChatImageView"
        android:id="@+id/cardImageProfileChat"
        android:outlineSpotShadowColor="@color/primary_light"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_round_person_24"
        app:cardBackgroundColor="@color/primary_muted"
        app:cardCornerRadius="75dp"
        app:cardElevation="9dp">

        <ImageView
            android:id="@+id/photoProfileChatImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_round_person_24" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textViewUsernameChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cardImageProfileChat"
        android:maxLines="1"
        android:text="User name"
        android:textColor="@color/primary"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/timeChatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewUsernameChat"
        android:layout_toRightOf="@+id/cardImageProfileChat"
        android:maxLines="1"
        android:text=""
        android:textSize="12dp" />
</RelativeLayout>
